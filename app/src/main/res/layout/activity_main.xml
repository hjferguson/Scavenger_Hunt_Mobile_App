<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu">

    <LinearLayout
        android:id="@+id/central_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="154dp"
        android:orientation="horizontal">

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="3"
            android:useDefaultMargins="true">

            <ImageButton
                android:id="@+id/start_button"
                android:layout_width="190dp"
                android:layout_height="135dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/main_menu_start_butt" />

            <ImageButton
                android:id="@+id/view_button"
                android:layout_width="216dp"
                android:layout_height="130dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="0"
                android:layout_gravity="left"
                android:src="@drawable/main_menu_view_hunt_butt" />

            <ImageView
                android:id="@+id/map_button"
                android:layout_width="408dp"
                android:layout_height="107dp"
                android:layout_row="0"
                android:layout_columnSpan="2"
                android:src="@drawable/map_button" />

            <ImageView
                android:id="@+id/settings_button"
                android:layout_width="185dp"
                android:layout_height="139dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:src="@drawable/main_menu_settings_butt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/achieve_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main_menu_achieve_butt" />

                <ImageButton
                    android:id="@+id/share_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main_menu_share_butt" />
            </LinearLayout>


        </GridLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/poi_selection"
    tools:context=".PoiSelectionActivity">

    <!-- Filter Button -->

    <!-- Text View -->

    <!-- Saved Button -->

    <ImageButton
        android:id="@+id/filter_butt"
        android:layout_width="298dp"
        android:layout_height="54dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/poi_selection_filter_butt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginBottom="12dp"
        android:text="@string/pois_nearby"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/filter_butt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/saved_butt"
        android:layout_width="298dp"
        android:layout_height="54dp"
        android:background="@drawable/poi_selection_save_butt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_butt"
        app:layout_constraintVertical_bias="0.652" />

</androidx.constraintlayout.widget.ConstraintLayout>
